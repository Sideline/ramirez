<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :headline %>
    <%= f.input :keywords %>
    <%= f.input :excerpt %>
    <%= f.input :feature %>
    <%= f.input :body %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
